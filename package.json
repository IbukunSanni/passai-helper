{
  "name": "passai-helper",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:debug-client": "next dev --inspect",
    "dev:debug-server": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{js,jsx,ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,mdx}\" --cache",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@prisma/client": "^6.5.0",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "better-auth": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "lucide-react": "^0.483.0",
    "motion": "^12.5.0",
    "next": "15.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-icons": "^5.5.0",
    "react-use-measure": "^2.1.7",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@eslint/eslintrc": "^3",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@storybook/addon-essentials": "^8.6.8",
    "@storybook/addon-onboarding": "^8.6.8",
    "@storybook/addon-themes": "^8.6.8",
    "@storybook/blocks": "^8.6.8",
    "@storybook/experimental-addon-test": "^8.6.8",
    "@storybook/experimental-nextjs-vite": "^8.6.8",
    "@storybook/nextjs": "^8.6.8",
    "@storybook/react": "^8.6.8",
    "@storybook/test": "^8.6.8",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitest/browser": "^3.0.9",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint": "^9",
    "eslint-config-next": "15.2",
    "eslint-plugin-storybook": "^0.11.6",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.5.0",
    "storybook": "^8.6.8",
    "tailwindcss": "^4",
    "tsc": "^2.0.4",
    "tw-animate-css": "^1.2.4",
    "typescript": "^5",
    "vitest": "^3.0.9"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "arrowParens": "always",
    "printWidth": 85,
    "objectWrap": "preserve",
    "jsxSingleQuote": false,
    "bracketSameLine": false,
    "singleAttributePerLine": true,
    "htmlWhitespaceSensitivity": "strict",
    "bracketSpacing": true,
    "trailingComma": "es5",
    "importOrder": [
      "<BUILT_IN_MODULES>",
      "^(react/(.*)$)|^(react$)",
      "^(next/(.*)$)|^(next$)",
      "<THIRD_PARTY_MODULES>",
      "",
      "^types$",
      "^@/helpers/(.*)$",
      "^@/config/(.*)$",
      "^@/lib/(.*)$",
      "^@/hooks/(.*)$",
      "^@/components/ui/(.*)$",
      "^@/components/(.*)$",
      "",
      "^[./]"
    ],
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators-legacy"
    ],
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
